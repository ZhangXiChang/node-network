{
    "build": {
        "beforeDevCommand": "trunk serve",
        "beforeBuildCommand": "trunk build",
        "devPath": "http://127.0.0.1:10279",
        "distDir": "../../dist",
        "withGlobalTauri": true
    },
    "tauri": {
        "windows": [
            {
                "label": "main",
                "title": "节点网络",
                "width": 1050,
                "height": 750,
                "decorations": false,
                "transparent": true,
                "center": true
            }
        ],
        "bundle": {
            "identifier": "com.zhangxichang.node-network",
            "icon": [
                "./logo.ico"
            ]
        },
        "allowlist": {
            "window": {
                "startDragging": true
            }
        }
    }
}